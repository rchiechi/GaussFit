load 'parula.pal'

BFN='200709_DyPc_AuTS_2V_1MeOH_S01'

#set terminal pdfcairo color enhanced font "Arial,24"
set terminal wxt enhanced font "Arial,12"

#set output BFN."_Gplot.pdf"

unset key
unset colorbox
set tics nomirror out scale 0.75

set xlabel 'Potential (V)'
set ylabel 'Normalized Differential Conductance' offset 1,0

# Don't forget to edit here too if you change paths!
XTICS="`head -1 200709_DyPc_AuTS_2V_1MeOH_S01_NDCMatrix_Labels.txt`"
YTICS="`tail -1 200709_DyPc_AuTS_2V_1MeOH_S01_NDCMatrix_Labels.txt`"

xmin = 0
xmax = words(XTICS)-1
ymin = 0
ymax = words(YTICS)-1

set xrange [xmin:xmax]
set yrange [ymin:ymax]

set for [i=xmin:xmax:25] xtics ( word(XTICS,i+1) i )
set for [i=ymin:ymax:20] ytics ( word(YTICS,i+1) i )
set xtics add ( word(XTICS, xmax+1) xmax)

plot BFN.'_NDCMatrix.txt' using 1:2:3 matrix w image

pause -1
exit
